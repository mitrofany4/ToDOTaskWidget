<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:baselineAligned="true"
    android:background="@drawable/myshape" android:padding="8dp">


    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Редактировать"
          android:id="@+id/button" android:layout_gravity="center" android:textStyle="bold"/>
     <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
          android:id="@+id/widgetLV" android:layout_gravity="center" android:visibility="visible" android:padding="2dp"/>
</LinearLayout>